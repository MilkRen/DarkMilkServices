    <None Remove="Source\Images\ToolBar\Minimize.png" />
    <None Remove="Source\Images\ToolBar\MinimizeBlack.png" />
    <None Remove="Source\Images\ToolBar\Up.png" />
    <None Remove="Source\Images\ToolBar\UpBlack.png" />
