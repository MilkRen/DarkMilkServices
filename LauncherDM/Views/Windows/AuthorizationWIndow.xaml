<Window x:Class="LauncherDM.Views.Windows.AuthorizationWIndow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauncherDM.Views.Windows"
        mc:Ignorable="d"
        Title="AuthorizationWIndow" 
        Height="350" Width="600"
        AllowsTransparency="True" Background="Transparent" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.RowSpan="5" BorderBrush="White" Opacity="0.5" Margin="1" BorderThickness="1" />

        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,2,2,0" >
                <Button x:Name="MinimizeBtn" Background="Transparent" BorderThickness="0" Margin="0,0,0,0" Width="30">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="DarkRed"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Image Height="15" Width="15" Source="/Source/Images/ToolBar/Minimize.png"/>
                </Button>
                <Button x:Name="CloseBtn" BorderThickness="0" Margin="0,0,0,0"  Width="30" >
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="DarkRed"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Image x:Name="ImgCloseBtn" Height="15" Width="15">
                        <Image.Style>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Source" Value="../../Source/Images/ToolBar/Close.png"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=ImgCloseBtn}" Value="True">
                                        <Setter Property="Source" Value="../../Source/Images/ToolBar/CloseBlack.png"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Label Content="DarkMilk" Foreground="White" FontSize="60" VerticalAlignment="Top" HorizontalAlignment="Center" Style="{StaticResource LogoFontsDesign}"/>
            <Label Content="DarkMilk" Foreground="White" FontSize="60" VerticalAlignment="Top" HorizontalAlignment="Center" Style="{StaticResource LogoFontsDesign}">
                <Label.Effect>
                    <BlurEffect Radius="5"/>
                </Label.Effect>
            </Label>

            <Separator Margin="0,65,0,0" Height="2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="280" Background="White">
                <Separator.Effect>
                    <BlurEffect Radius="2.5"/>
                </Separator.Effect>
                <Separator.Style>
                    <Style TargetType="{x:Type Separator}">
                        <Setter Property="Opacity" Value="0.8"/>
                    </Style>
                </Separator.Style>
            </Separator>
        </Grid>

        <Grid Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Grid.Row="0">
                    <StackPanel Orientation="Vertical">
                        <Label Content="Аккаунт" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
                        <Separator Height="2" Width="110" VerticalAlignment="Center" HorizontalAlignment="Center"  Background="White">
                            <Separator.Effect>
                                <BlurEffect Radius="0.2"/>
                            </Separator.Effect>
                            <Separator.Style>
                                <Style TargetType="{x:Type Separator}">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Style>
                            </Separator.Style>
                        </Separator>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="0" Grid.Row="1">
                    <Button Margin="5">

                    </Button>
                </Grid>

                <Grid Grid.Column="1" Grid.Row="0">
                    <Label Content="Аккаунт" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
                </Grid>
                <Grid Grid.Column="1" Grid.Row="1">
                    <Button Margin="5">

                    </Button>
                </Grid>

                <Grid Grid.Column="2" Grid.Row="0">
                    <Label Content="Аккаунт" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
                </Grid>
                <Grid Grid.Column="2" Grid.Row="1">
                    <Button Margin="5">

                    </Button>
                </Grid>

                <Grid Grid.Column="3" Grid.Row="0">
                    <Label Content="Аккаунт" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
                </Grid>
                <Grid Grid.Column="3" Grid.Row="1">
                    <Button Margin="5">

                    </Button>
                </Grid>

                <Grid Grid.Column="4" Grid.Row="0">
                    <Label Content="Аккаунт" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
                </Grid>
                <Grid Grid.Column="4" Grid.Row="1">
                    <Button Margin="5">

                    </Button>
                </Grid>

            </Grid>
        </Grid>

        <Grid Grid.Row="3">
            <Button VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="20"  />
        </Grid>

    </Grid>
</Window>
